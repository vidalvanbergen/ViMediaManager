#tag Class
Protected Class CanvasLogo
Inherits Canvas
	#tag Event
		Sub Paint(g As Graphics, areas() As REALbasic.Rect)
		  #pragma Unused areas
		  
		  dim maxSize as Integer = min( me.Width, me.Height )
		  #if TargetMacOS then
		    dim TheAppIcon as Picture = App.ApplicationBundle.Icon(Max(me.Width, me.Height))
		    g.ScaleImage( TheAppIcon, g.Width, g.Height, ( g.Width / 2 ) - ( MaxSize / 2 ), ( g.Height / 2 ) - ( MaxSize / 2 ) )
		  #else
		    g.ScaleImage( AppIcon, g.Width, g.Height, ( g.Width / 2 ) - ( MaxSize / 2 ), ( g.Height / 2 ) - ( MaxSize / 2 ) )
		  #endif
		  
		  RaiseEvent paint( g )
		End Sub
	#tag EndEvent


