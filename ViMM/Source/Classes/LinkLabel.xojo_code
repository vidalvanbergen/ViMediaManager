#tag Class
Protected Class LinkLabel
Inherits Label
	#tag Event
		Function MouseDown(X As Integer, Y As Integer) As Boolean
		  If IsContextualClick then
		    Dim base as new MenuItem
		    base.Append new MenuItem ( Menu.CMMCopyLink )
		    base.Append New MenuItem ( Menu.CMMCopyText )
		    
		    Dim HitItem as MenuItem = base.PopUp
		    
		    Dim c as new Clipboard
		    If HitItem <> Nil Then
		      If HitItem.Text = Menu.CMMCopyLink Then c.Text = URL
		      If HitItem.Text = Menu.CMMCopyText Then c.Text = Me.Text
		    End If
		    
		  Else
		    Bold = True
		    Return True
		  End If
		  
		End Function
	#tag EndEvent

	#tag Event
		Sub MouseEnter()
		  Underline = False
		  Italic = True
		  If Text <> "" then MouseCursor = System.Cursors.FingerPointer
		End Sub
	#tag EndEvent

	#tag Event
		Sub MouseExit()
		  Underline = True
		  Italic = False
		  MouseCursor = System.Cursors.StandardPointer
		End Sub
	#tag EndEvent

	#tag Event
		Sub MouseUp(X As Integer, Y As Integer)
		  Bold = False
		  If x > 0 and X < Width and Y > 0 and Y < Height and Text <> "" and URL <> "" then ShowURL URL
		End Sub
	#tag EndEvent

	#tag Event
		Sub Open()
		  TextColor = &c3366BB
		  Underline = True
		  Open
		End Sub
	#tag EndEvent


	#tag Hook, Flags = &h0
		Event Open()
	#tag EndHook


